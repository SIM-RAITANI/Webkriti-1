<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="apple-touch-icon" sizes="180x180" href="/Favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/Favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/Favicon/favicon-16x16.png" />
    <link rel="manifest" href="/Favicon/site.webmanifest" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    

    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/view-all.css" />
  </head>
  <body>
    <nav>
        <div class="logo">
            <a href="/home" style="cursor: pointer; text-decoration: none;"><img src="/images/finallogo.png" alt=""></a>
        </div>
    </nav>
    <div class="container">
      <div class="box">
        <% if (posts.length > 0) { %>
          <% posts.forEach(post => { %>
              <div class="card">
                  <div class="postImage">
                      <img src="<%= post.image %>" alt="" />
                  </div>
                  <div class="postContent">
                      <h2>
                          <a href="/post/read-post/<%= post._id %>" style="text-decoration: none" id="post-link">
                              <%= post.title %>
                          </a>
                      </h2>
                      <p><%= post.description %></p>
                  </div>
              </div>
          <% }) %>
      <% } else { %>
          <h1 style="color: #f4722b;text-align: center;">Oops no post to display!!</h1>
      <% } %>
      
      </div>
    </div>
  </body>
</html>
